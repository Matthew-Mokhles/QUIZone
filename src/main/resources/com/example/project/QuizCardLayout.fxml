<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="175.0" prefWidth="240.0" style="-fx-background-color: #4942ce;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.QuizCardLayout">
   <children>
      <VBox prefHeight="128.0" prefWidth="230.0" spacing="40.0">
         <children>
            <Label id="title" fx:id="title" prefHeight="30.0" prefWidth="249.0" text="Quiz Title" textFill="WHITE">
               <font>
                  <Font name="Alegreya Sans ExtraBold" size="24.0" />
               </font>
            </Label>
            <Label id="noq" fx:id="noq" prefHeight="20.0" prefWidth="186.0" text="Number Of Questions: 25" textFill="WHITE">
               <font>
                  <Font name="Alegreya Sans Medium" size="17.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" top="10.0" />
         </padding>
      </VBox>
      <FlowPane alignment="CENTER_RIGHT" layoutX="5.0" layoutY="133.0" prefHeight="36.0" prefWidth="230.0">
         <children>
            <Button id="glass" fx:id="startButton" mnemonicParsing="false" onAction="#startQuiz" prefHeight="36.0" prefWidth="84.0" stylesheets="@../../../stylesheet.css" text="Start Quiz">
               <font>
                  <Font size="17.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </FlowPane>
   </children>
   <effect>
      <DropShadow />
   </effect>
</AnchorPane>
